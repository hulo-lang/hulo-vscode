{
	"name": "hulo-vscode",
	"description": "Hulo language support for Visual Studio Code",
	"author": "The Hulo Authors",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/hulo-lang/hulo-vscode"
	},
	"publisher": "hulo-lang",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.75.0"
	},
	"activationEvents": [
		"onLanguage:plaintext"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "hulo",
				"aliases": [
					"hulo",
					"hulo"
				],
				"extensions": [
					".hl"
				],
				"icon": {
					"light": "assets/icon.png",
					"dark": "assets/icon.png"
				},
				"configuration": "./assets/language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "hulo",
				"scopeName": "source.hl",
				"path": "./assets/hulo.tmLanguage.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Hulo configuration",
			"properties": {
				"languageServerHulo.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServerHulo.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "^20",
		"eslint": "^9.13.0",
		"mocha": "^10.3.0",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.0"
	},
	"dependencies": {
		"hulo-vscode": "file:"
	}
}